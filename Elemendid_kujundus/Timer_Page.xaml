<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Elemendid_kujundus.Timer_Page">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Taimeri töö"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="lbl"
                   Text="Vajuta nupule ja siia"
                   FontSize="Medium"
                   BackgroundColor="AliceBlue">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
            <Button x:Name="btn_timer"
                    Text="Naita timer"
                    FontSize="Large"
                    Clicked="btn_timer_Clicked">
            </Button>
            <Button x:Name="tagasi_btn"
                    Text="Tagasi"
                    FontSize="Large"
                    Clicked="tagasi_btn_Clicked">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>